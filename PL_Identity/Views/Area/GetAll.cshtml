@model ML.Area
@{
    ViewData["Title"] = "GetAll";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>Areas</h3>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-1 offset-11">
            @Html.ActionLink(" +", "Form", "Area", null, new { @class = "btn btn-success bi-person-fill-add" })
        </div>
        <br />
        <hr />
    </div>
    <div class="row">

        @if (Model.Areas.Count > 0)
        {
            <table class="table table-hover">
                <thead class="thead-dark">
                <th scope="col">Editar</th>
                <th scope="col">IdArea</th>
                <th scope="col">Nombre</th>
                <th scope="col">Descripcion</th>
                <th scope="col">Eliminar</th>
                </thead>
                <tbody>
                    @foreach (ML.Area area in Model.Areas)
                    {
                        <tr>
                            <td scope="row" class="text-center">
                                <a class="btn btn-primary bi bi-pencil-fill" href="@Url.Action("Form","Area", new {IdArea = area.IdArea})"></a>
                            </td>
                            <td>@area.IdArea</td>
                            <td>@area.Nombre</td>
                            <td>@area.Descripcion</td>
                            <td>
                                <a class="btn btn-danger bi bi-trash" onclick="return confirm('¿Estás seguro de eliminar esta area?');" href="@Url.Action("Delete","Area", new {IdArea = area.IdArea})"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-danger" role="alert">
                No se han podido recuperar datos
            </div>
        }
    </div>
</div>
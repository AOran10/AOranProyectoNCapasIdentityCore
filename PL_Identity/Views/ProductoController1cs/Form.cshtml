@model ML.Producto
@{
    ViewData["Title"] = "Form";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>@ViewBag.Title</h2>
            <hr />
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 offset-6">
            <h5>Llena todos los datos para @ViewBag.Accion el producto</h5>
        </div>
    </div>
    <div class="row">
        <form action="/Producto/Form" method="post">
            <div class="row">
                <div class="form-group col-md-3">
                    <label>Nombre:</label>
                    <input type="text" class="form-control" name="Nombre" value="" placeholder="Nombre" />
                </div>
                <div class="form-group col-md-3">
                    <label>Descripción:</label>
                    <textarea class="form-control" name="Descripcion" value="" placeholder="Descripción del producto"></textarea>
                </div>
            </div>
            <div class="row">
                <div class="form-group col-md-3">
                    <label>Stock inicial:</label>
                    <input type="number" class="form-control" name="Stock" value=""  />
                </div>
                <div class="form-group col-md-3">
                    <label>Piezas en curso</label>
                    <input type="number" class="form-control" name="EnCurso" value="" />
                </div>
            </div>

            <div class="col-md-12">
                <input type="submit" class="btn btn-success">@ViewBag.Accion</input>
                <button action="/Producto/GetAll" class="btn btn-danger">Volver</button>
            </div>
        </form>
    </div>
</div>